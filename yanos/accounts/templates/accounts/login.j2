{% block content %}
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h4 class="modal-title">{{page_title}}</h4>
</div>
<div class="modal-body">
	<form action="{{url_for('accounts.login')}}" method="POST" id="login-form">
		<div class="form-group">
			<label for="username">Nom d'utilisateur</label>
			{{form.username(class='form-control', placeholder='Nom d\'utilisateur')}}
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			{{form.password(class='form-control', placeholder='Mot de passe')}}
		</div>
	</form>
</div>
{% endblock %}
