{% extends 'base.j2' %}

{% load bootstrap %}

{% block content %}
<h2>Gestion des priorités</h2>
<div class="new_item">
	<form action="{% url 'tasks_priority' %}" method="POST" class="form-inline">
		{% csrf_token %}
		<fieldset>
			<legend>Nouvelle priorité</legend>
			<div class="form-group">
				 <label class="sr-only" for="id_name">Nom</label>
				 {{form.name|bootstrap_inline}}
			</div>

			<button type="submit" class="btn btn-default">Ajouter</button>
		</fieldset>
	</form>
</div>

<form action="{% url 'tasks_priority' %}" method="POST" id="form-priority-edit">
	{% csrf_token %}
	<table class="table table-hover">
		<thead>
			<tr>
				<th colspan="2">Priorités</th>
			</tr>
		</thead>
		<tbody>
		{% for priority in priorities %}
			<tr id="lineid-{{priority.id}}">
				<td class="col_name">{{priority.name}}</td>
				<td class="col_actions">
					<button type="button" id="btn-delete" class="btn btn-danger btn-xs">Supprimer</button>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</form>
{% endblock %}
