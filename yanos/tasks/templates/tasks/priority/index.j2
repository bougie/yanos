{% extends 'base.j2' %}

{% block content %}
<h2>Gestion des priorités</h2>
<div class="new_item">
	<form action="{{url_for('tasks.priority')}}" method="POST" class="form-inline">
		{{form.csrf_token}}
		<fieldset>
			<legend>Nouvelle priorité</legend>
			<div class="form-group">
				 <label class="sr-only" for="name">Nom</label>
				 {{form.name(class="form-control", placeholder="Entrer le nom")}}
			</div>

			<button type="submit" class="btn btn-default">Ajouter</button>
		</fieldset>
	</form>
</div>

<form action="{{url_for('tasks.priority')}}" method="POST" id="form-priority-edit">
	{{form.csrf_token}}
	<table class="table table-hover">
		<thead>
			<tr>
				<th colspan="2">Priorités</th>
			</tr>
		</thead>
		<tbody>
		{% for priority in priorities %}
			<tr id="priority-{{priority.id}}">
				<td class="col_name">{{priority.name}}</td>
				<td class="col_actions">
					<button type="button" id="btn-delete" class="btn btn-danger btn-xs">Supprimer</button>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</form>
{% endblock %}
