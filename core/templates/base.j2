{% load static %}

<!DOCTYPE html>
<html lang="fr">
 	<head>
		<title>{{page_title}}</title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<meta name="author" content="{{page_author}}" />
		<meta name="keywords" content="{{page_keywords}}" />
		<meta name="description" content="{{page_description}}" />

		<link rel="stylesheet" href="{% static 'css/bootstrap.min.css' %}" />
		<link rel="stylesheet" href="{% static 'css/jquery.popmessage.css' %}" />
		<link rel="stylesheet" href="{% static 'css/style.css' %}" />

		<script src="{% static 'js/jquery.min.js' %}"></script>
		<script src="{% static 'js/jquery.popmessage.js' %}"></script>
		<script src="{% static 'js/bootstrap.min.js' %}"></script>
		<script src="{% static 'js/scripts.js' %}"></script>
	</head>
	<body>
		<div id="page">
			{% include 'accounts/links.j2' %}
			<h1>{{page_title}}</h1>

			<div id="content">
				{% if messages %}
					{% for message in messages %}
						<div class="pop pop-top-wide pop-{% if message.tags %}{{message.tags}}{% endif %}">
							<div class="pop-body">
								{{message}}
							</div>
						</div>
					{% endfor %}
					<script type='text/javascript'>
					$(function() {
						 $("div.pop").each(function() { $(this).pop("show", {'delay': 1500}) });
					});
					</script>
				{% endif %}

				<div class="modal fade" id="register-popup" tabindex="-1" role="dialog" aria-labelledby="register-popup-label" aria-hidden="true">
					<div class="modal-dialog"><div class="modal-content"></div></div>
				</div>
				<div class="modal fade" id="login-popup" tabindex="-1" role="dialog" aria-labelledby="login-popup-label" aria-hidden="true">
					<div class="modal-dialog"><div class="modal-content"></div></div>
				</div>

				{% block content %}
				{% endblock %}
			</div>

			<div class="footer">&nbsp;</div>
		</div>
	</body>
</html>
